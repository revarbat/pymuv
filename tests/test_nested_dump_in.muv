include "!fb6/prims";

func dump(arr, indent) {
    var key;
    var val;
    var out = "";
    for (key => val in arr) {
        if (array?(val) || dictionary?(val)) {
            tell(fmtstring("%s%~ => [", indent, key));
            dump(val, cat(indent, "  "));
            tell(fmtstring("%s]", indent));
        } else {
            tell(fmtstring("%s%~ => %~", indent, key, val));
        }
    }
}

func dictfunc() {
    var mydict = [
        "one" => "First",
        "two" => "Second",
        "three" => "Third"
    ];
    dump(mydict, "");
    var myvar = mydict["two"];
    tell(myvar);
    mydict["five"] = "Fifth";
    del(mydict["three"]);
}

